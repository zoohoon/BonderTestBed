<UserControl x:Class="BVisionTestView.BUcVisionTest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BVisionTestView"
             xmlns:ljc="clr-namespace:LightJog;assembly=LightJog"
             xmlns:manualjogview="clr-namespace:ManualJogView;assembly=ManualJogView"
             xmlns:prober="clr-namespace:ProberInterfaces;assembly=ProberInterfaces"
             xmlns:formarkpages="clr-namespace:ManualJogView.TestPages;assembly=ManualJogView"
             mc:Ignorable="d" 
             d:DesignHeight="940" d:DesignWidth="1600" >
    <UserControl.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="DisplayViewTemplate" DataType="{x:Type prober:IDisplayPort}" >
                <ContentControl Name="DisPlay" Content="{Binding }"/>
            </DataTemplate>
            <local:TemplateSelector x:Key="ViewTargetTemplateSelector" 
                                    DisplayViewDataTemplate="{StaticResource DisplayViewTemplate}"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 컨트롤 바 -->
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button AutomationProperties.AutomationId="btnFileExplorer" Content="File 탐색기" Grid.Column="0" Command="{Binding LoadCommand}" />
            <ComboBox AutomationProperties.AutomationId="cmbStageCam"
                      ItemsSource="{Binding StageCamList}"
                      Foreground="WhiteSmoke"
                      DisplayMemberPath="CamType"
                      SelectedValuePath="CamType"
                      SelectedValue="{Binding SelectedCam}" Grid.Column="1"/>
            <Button AutomationProperties.AutomationId="btnStartGrab"
                    Content="StartGrab" Grid.Column="2" Command="{Binding StartGrabCommand}"/>
            <Button AutomationProperties.AutomationId="btnSaveGrabImage"
                    Content="Save Grab Img" Grid.Column="3" Command="{Binding SaveGrabimgCommand}"/>
            <Button AutomationProperties.AutomationId="btnStopGrab"
                    Content="Stop Grab" Grid.Column="4" />
            <Button AutomationProperties.AutomationId="btnSingleGrab"
                    Content="Single Grab" Grid.Column="5"/>
        </Grid>

        <!-- 중간 본문: 좌(메인 디스플레이) / 우(카메라 5뷰) -->
        <Grid Grid.Column="0" Grid.Row="1">
            <!-- 좌/우 비율 -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- ===== 왼쪽: 메인 디스플레이(기존 유지) ===== -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderThickness="1" BorderBrush="DimGray"
                        HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ContentControl Width="600" Height="600" Content="{Binding DisplayPort}"/>
                    </Grid>
                </Border>

                <ljc:UcLightJog Grid.Row="1" Width="250" Height="100"
                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                DataContext="{Binding LightJog}"
                                Visibility="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                                             AncestorType={x:Type UserControl}}, Path=DataContext.LightJogVisibility, Mode=TwoWay}"/>

                <Button AutomationProperties.AutomationId="btnSetCenter"
                        Content="Set Center"  Grid.Row="1" Grid.Column="0"
                        Background="LightGray" FontSize="12" VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center" FontWeight="Bold" Height="50" Width="70"
                        Command="{Binding SetCenterCommand}" Margin="350,0,0,0"/>
            </Grid>

            <!-- ===== 오른쪽: 카메라 5개 보드 추가(새로 교체된 부분) ===== -->
            <Grid Grid.Column="1" Margin="4,0,0,0">
                <!-- 이 보드 전용 스타일(스코프 한정) -->
                <Grid.Resources>
                    <Style x:Key="Card" TargetType="Border">
                        <Setter Property="CornerRadius" Value="12"/>
                        <Setter Property="Background" Value="#1e1e1e"/>
                        <Setter Property="BorderBrush" Value="#2a2a2a"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Setter Property="Margin" Value="8"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.35"/>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="CamImage" TargetType="Image">
                        <Setter Property="Stretch" Value="Uniform"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Setter Property="UseLayoutRounding" Value="True"/>
                    </Style>

                    <Style x:Key="Badge" TargetType="Border">
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="VerticalAlignment" Value="Top"/>
                        <Setter Property="Margin" Value="10"/>
                        <Setter Property="Background" Value="#66000000"/>
                        <Setter Property="CornerRadius" Value="6"/>
                        <Setter Property="Padding" Value="6,2"/>
                    </Style>

                    <Style x:Key="CtlButton" TargetType="Button">
                        <Setter Property="Margin" Value="6,0,0,0"/>
                        <Setter Property="Padding" Value="10,4"/>
                        <Setter Property="MinWidth" Value="72"/>
                    </Style>

                    <Style x:Key="CtlLabel" TargetType="TextBlock">
                        <Setter Property="Foreground" Value="#ddd"/>
                        <Setter Property="Margin" Value="8,0,0,0"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>

                    <Style x:Key="CtlRadio" TargetType="RadioButton">
                        <Setter Property="Foreground" Value="#ddd"/>
                        <Setter Property="Margin" Value="0,0,8,0"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </Grid.Resources>

                <!-- 3행 × 2열 (가운데 행은 Span=2) -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- CAM 1 (Top-Left) -->
                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Card}">
                        <Grid>
                            <Image Style="{StaticResource CamImage}" Source="{Binding Cam1Source}"/>
                            <Border Style="{StaticResource Badge}">
                                <TextBlock Text="CX 4" Foreground="#ddd" FontWeight="SemiBold"/>
                            </Border>
                            <Border VerticalAlignment="Bottom" Background="#2a2a2a" Opacity="0.95" Padding="8">
                                <DockPanel LastChildFill="False">
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                        <RadioButton x:Name="rbSoft1" Style="{StaticResource CtlRadio}" Content="SOFT"/>
                                        <RadioButton x:Name="rbRaw1"  Style="{StaticResource CtlRadio}" Content="RAW" IsChecked="True"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                        <Button Style="{StaticResource CtlButton}" Content="Open" Command="{Binding OpenCameraCommand}" CommandParameter="0"/>
                                        <Button Style="{StaticResource CtlButton}" Content="Start" Command="{Binding StartCameraCommand}" CommandParameter="0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                        <TextBlock Style="{StaticResource CtlLabel}" Text="{Binding Cam1Model}"/>
                                        <TextBlock Style="{StaticResource CtlLabel}" Text="{Binding Cam1Serial}"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- CAM 2 (Top-Right) -->
                    <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource Card}">
                        <Grid>
                            <Image Style="{StaticResource CamImage}" Source="{Binding Cam2Source}"/>
                            <Border Style="{StaticResource Badge}">
                                <TextBlock Text="CX 1" Foreground="#ddd" FontWeight="SemiBold"/>
                            </Border>
                            <Border VerticalAlignment="Bottom" Background="#2a2a2a" Opacity="0.95" Padding="8">
                                <DockPanel LastChildFill="False">
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                        <RadioButton x:Name="rbSoft2" Style="{StaticResource CtlRadio}" Content="SOFT"/>
                                        <RadioButton x:Name="rbRaw2"  Style="{StaticResource CtlRadio}" Content="RAW" IsChecked="True"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                        <Button Style="{StaticResource CtlButton}" Content="Open" Command="{Binding OpenCameraCommand}" CommandParameter="1"/>
                                        <Button Style="{StaticResource CtlButton}" Content="Start" Command="{Binding StartCameraCommand}" CommandParameter="1"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                        <TextBlock Style="{StaticResource CtlLabel}" Text="{Binding Cam2Model}"/>
                                        <TextBlock Style="{StaticResource CtlLabel}" Text="{Binding Cam2Serial}"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- CAM 3 (Middle, Span=2) -->
                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource Card}">
                        <Grid>
                            <Image Style="{StaticResource CamImage}" Source="{Binding Cam3Source}"/>
                            <Border Style="{StaticResource Badge}">
                                <TextBlock Text="CX 5" Foreground="#ddd" FontWeight="SemiBold"/>
                            </Border>
                            <Border VerticalAlignment="Bottom" Background="#2a2a2a" Opacity="0.95" Padding="8">
                                <DockPanel LastChildFill="False">
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                        <RadioButton x:Name="rbSoft3" Style="{StaticResource CtlRadio}" Content="SOFT"/>
                                        <RadioButton x:Name="rbRaw3"  Style="{StaticResource CtlRadio}" Content="RAW" IsChecked="True"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                        <Button Style="{StaticResource CtlButton}" Content="Open" Command="{Binding OpenCameraCommand}" CommandParameter="2"/>
                                        <Button Style="{StaticResource CtlButton}" Content="Start" Command="{Binding StartCameraCommand}" CommandParameter="2"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                        <TextBlock Style="{StaticResource CtlLabel}" Text="{Binding Cam3Model}"/>
                                        <TextBlock Style="{StaticResource CtlLabel}" Text="{Binding Cam3Serial}"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- CAM 4 (Bottom-Left) -->
                    <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource Card}">
                        <Grid>
                            <Image Style="{StaticResource CamImage}" Source="{Binding Cam4Source}"/>
                            <Border Style="{StaticResource Badge}">
                                <TextBlock Text="CX 3" Foreground="#ddd" FontWeight="SemiBold"/>
                            </Border>
                            <Border VerticalAlignment="Bottom" Background="#2a2a2a" Opacity="0.95" Padding="8">
                                <DockPanel LastChildFill="False">
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                        <RadioButton x:Name="rbSoft4" Style="{StaticResource CtlRadio}" Content="SOFT"/>
                                        <RadioButton x:Name="rbRaw4"  Style="{StaticResource CtlRadio}" Content="RAW" IsChecked="True"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                        <Button Style="{StaticResource CtlButton}" Content="Open" Command="{Binding OpenCameraCommand}" CommandParameter="3"/>
                                        <Button Style="{StaticResource CtlButton}" Content="Start" Command="{Binding StartCameraCommand}" CommandParameter="3"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                        <TextBlock Style="{StaticResource CtlLabel}" Text="{Binding Cam4Model}"/>
                                        <TextBlock Style="{StaticResource CtlLabel}" Text="{Binding Cam4Serial}"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- CAM 5 (Bottom-Right) -->
                    <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource Card}">
                        <Grid>
                            <Image Style="{StaticResource CamImage}" Source="{Binding Cam5Source}"/>
                            <Border Style="{StaticResource Badge}">
                                <TextBlock Text="CX 2" Foreground="#ddd" FontWeight="SemiBold"/>
                            </Border>
                            <Border VerticalAlignment="Bottom" Background="#2a2a2a" Opacity="0.95" Padding="8">
                                <DockPanel LastChildFill="False">
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                        <RadioButton x:Name="rbSoft5" Style="{StaticResource CtlRadio}" Content="SOFT"/>
                                        <RadioButton x:Name="rbRaw5"  Style="{StaticResource CtlRadio}" Content="RAW" IsChecked="True"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                        <Button Style="{StaticResource CtlButton}" Content="Open" Command="{Binding OpenCameraCommand}" CommandParameter="4"/>
                                        <Button Style="{StaticResource CtlButton}" Content="Start" Command="{Binding StartCameraCommand}" CommandParameter="4"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                        <TextBlock Style="{StaticResource CtlLabel}" Text="{Binding Cam5Model}"/>
                                        <TextBlock Style="{StaticResource CtlLabel}" Text="{Binding Cam5Serial}"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <!-- 하단 버튼들 -->
        <Grid Grid.Column="0" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button AutomationProperties.AutomationId="btnStageEMGStop"
                    Content="StageEMGStop" Grid.Column="0" Height="48" Command="{Binding StageEMGStopCommand}"/>
            <Button AutomationProperties.AutomationId="btnLoaderEMGStop"
                    Content="LoaderEMGStop" Grid.Column="1" Height="48" Command="{Binding LoaderEMGStopCommand}"/>
            <Button AutomationProperties.AutomationId="btnZAxisHoming"
                    Content="ZAxisHoming" Grid.Column="2" Height="48" Command="{Binding ZAxisHomingCommand}"/>
            <Button AutomationProperties.AutomationId="btnProcessing"
                    Content="Processing" Grid.Column="3" Height="48" Command="{Binding ImgProcessing }"/>
            <Button AutomationProperties.AutomationId="btnTiltingTest"
                    Content="TiltingTest" Grid.Column="4" Height="48" Command="{Binding TiltingTestCommand}"/>
            <Button AutomationProperties.AutomationId="btnMarkAlign"
                    Content="MarkAlign" Grid.Column="5" Height="48" Command="{Binding MarkAlignCommand}"/>
            <Button Content="WaferAlignRepeatTest" Grid.Column="6" Height="48" Command="{Binding WaferTestCommand}"/>
            <CheckBox IsChecked="{Binding Path=TestRepeat}" Content="Repeat" Foreground="White" Grid.Column="7"  
                      VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>